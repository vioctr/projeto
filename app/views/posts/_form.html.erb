<%= form_with(model: post, local: true) do |form| %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body, id: :post_body %>
    <trix-editor input = "post_body"> </trix-editor>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

