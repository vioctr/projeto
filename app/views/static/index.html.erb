        <div class="box wow fadeInRight" data-wow-delay="0.2s">
          <div class="icon"><i class="fas fa-globe-americas"></i></div>
          <h4 class="title"><%= link_to post.title, post %></h4>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</section>



